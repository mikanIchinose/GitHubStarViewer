{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"labels": ["deps"],
	"packageRules": [
		{
			"matchPackagePrefixes": [
				"androidx.compose.compiler",
				"org.jetbrains.kotlin:"
			],
			"groupName": "Compose Compiler and Kotlin",
			"groupSlug": "compose_compiler_and_kotlin"
		},
		{
			"matchPackagePrefixes": [
				"githubstarviewer.detekt:githubstarviewer.detekt.gradle.plugin",
				"githubstarviewer.unittest:githubstarviewer.unittest.gradle.plugin"
			],
			"enabled": false
		}
	]
}
